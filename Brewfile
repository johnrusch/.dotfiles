 vscode "bradlc.vscode-tailwindcss"  # Tailwind CSS IntelliSense
 vscode "christian-kohler.npm-intellisense"  # Npm Intellisense
 vscode "dbaeumer.vscode-eslint"  # ESLint
 vscode "eamodio.gitlens"  # GitLens
 vscode "eriklynd.json-tools"  # JSON Tools
